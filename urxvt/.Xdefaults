# hide mouse pointer as soon as start typing
URxvt.pointerBlank: True
#URxvt*pointerBlankDelay: 3

!urxvt color scheme:
URxvt*background: #222222
URxvt*foreground: #777777

URxvt*colorUL: #86a2b0

! black
URxvt*color0  : #2E3436
URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #34E2E2
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC

!urxvt fonts: 
#URxvt*font: xft:Inconsolata:pixelsize=16
#URxvt*boldFont: xft:Inconsolata:bold:pixelsize=16
URxvt*font: xft:Monospace:pixelsize=13
URxvt*boldFont: xft:Monospace:bold:pixelsize=13

!urxvt extensions:
#URxvt.perl-ext-common:  default,matcher,tabbedex

!enabling clickable links:
URxvt.urlLauncher:      /usr/bin/chromium
URxvt.matcher.button:   1 

!urxvt scrolling options and cursor style:
URxvt*saveLines: 12000
URxvt*scrollstyle:plain
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: true

